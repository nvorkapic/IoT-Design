<Page
    x:Class="TestInterface.StatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestInterface"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF193219" Height="480" VerticalAlignment="Top" HorizontalAlignment="Left" Width="800">
        <TextBlock x:Name="textBlockTitle" Height="100" Margin="348,35,10,0" TextWrapping="Wrap" Text="IDUN" VerticalAlignment="Top" Foreground="#FFF1F1F1" FontSize="78" TextAlignment="Center" CharacterSpacing="300" SelectionHighlightColor="White"/>
        <Button x:Name="btnBACK" Content="Return" Margin="10,370,0,0" VerticalAlignment="Top" Width="310" Height="100" Foreground="White" Background="#FF193219" FontWeight="Bold" IsHoldingEnabled="False" IsDoubleTapEnabled="False" IsRightTapEnabled="False" BorderBrush="White" Click="btnBACK_Click"/>
        <TextBox x:Name="textBoxList" HorizontalAlignment="Left" Height="225" Margin="10,140,0,0" TextWrapping="Wrap" Text="[___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________]&#xD;&#xA;[___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________]&#xD;&#xA;[___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________]&#xD;&#xA;[___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________]&#xD;&#xA;[___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________]&#xD;&#xA;[___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________]&#xD;&#xA;[___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________]&#xD;&#xA;[___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________][___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________][___ID___][DateOfMaintenance][MaxStatusNr][Note___________________________________________________________________]" VerticalAlignment="Top" Width="780" Background="#FF193219" Foreground="White" SelectionHighlightColor="Black" BorderBrush="White" IsReadOnly="True" />
        <Button x:Name="btnSetNrOfRuns" Content="Settings" Margin="480,370,0,0" VerticalAlignment="Top" Width="310" Height="100" Foreground="White" Background="#FF193219" FontWeight="Bold" IsHoldingEnabled="False" IsDoubleTapEnabled="False" IsRightTapEnabled="False" BorderBrush="White" Click="btnSetNrOfRuns_Click"/>
        <Button x:Name="btnCurrUsage" Content="Current Usage Number: [0000/0000]" Margin="10,35,0,0" VerticalAlignment="Top" Width="310" Height="100" Foreground="White" Background="#FF193219" FontWeight="Bold" IsHoldingEnabled="False" IsDoubleTapEnabled="False" IsRightTapEnabled="False" BorderBrush="White"/>

    </Grid>
</Page>
